[color]
	branch = auto
	diff   = auto
	status = auto
	ui     = true

[alias]
# Commit aliases
	co  = commit -v
	com = commit -m
	ca  = commit -av
	caa = commit -av --amend
	cam = commit -am
	cane = commit -a --amend --no-edit

# Local status aliases
	sta  = status -s
	diff = diff --color-moved

# Logging aliases
	sl   = log --oneline --decorate -20
	slp  = log --oneline --decorate
	sla  = log --oneline --decorate --graph --all -20
	slap = log --oneline --decorate --graph --all
	lgbr = log master..

# Branching aliases
	bra = branch
	che = checkout

# Rebase aliases
	rb   = rebase
	rbi  = rebase --interactive
	rbc  = rebase --continue
	rbm  = rebase master
	rbim = rebase --interactive master

# Push-Pull aliases
	po   = push origin
	pom  = push origin master
	phm  = push heroku master
	pl   = pull
	plo  = pull origin
	plu  = pull upstream
	plom = pull origin master
	plum = pull upstream master
	pof  = push origin --force

# Cloneing aliases
	cl  = clone
	clo = clone

# Other aliases
	pick             = cherry-pick
	who              = blame
	edit-conflicts   = !"editconflicts() { $EDITOR $(git diff --name-only --diff-filter=U); }; editconflicts"
	merge-pr         = !"mergepr() { git checkout master && git pull && git checkout $1 && git rebase master && git checkout master && git merge $1 && git push --no-verify && git branch --delete $1 && git push --no-verify --delete origin $1 && git pull; }; mergepr"
	tag-release      = !"tagrelease() { git checkout master && git tag --sign --message \"Version $1\" v$1 && git push --tags; }; tagrelease"
	rebase-to-master = !"rebasetomaster() { git checkout master && git pull origin master && git checkout - && git rebase master; }; rebasetomaster"

[gpg]
	program = gpg

[protocol]
	version = 2

[push]
	default = current

[commit]
	gpgsign = true

[rebase]
	autosquash = true

[log]
	date = human

[core]
	pager = diff-so-fancy | less --tabs=4 -RFX

[color "diff"]
	meta       = yellow
	frag       = magenta bold
	commit     = yellow
	old        = red
	new        = green
	whitespace = red reverse

[color "diff-highlight"]
	oldNormal    = red
	oldHighlight = red 52
	newNormal    = green
	newHighlight = green 22
