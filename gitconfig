[alias]
# Basic action aliases
	co   = commit
	com  = commit -m
	ca   = commit -a
	cam  = commit -am
	sta  = status -s

# Branching aliases
	bra  = branch
	che  = checkout

# Push-Pull aliases
	po  = push origin
	pom  = push origin master
	phm  = push heroku master
	pl  = pull
	plo  = pull origin
	plom  = pull origin master

# Cloneing aliases
	cl   = clone
	clo  = clone

# Hardcore aliases
	lg   = log --oneline
	cf   = cat-file -p
	cft  = cat-file -t
	cfs  = cat-file -s
	cfp  = cat-file -p
	ls   = ls-tree
	lst  = ls-tree
	lsr  = ls-tree -r
