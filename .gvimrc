
colorscheme solarized
set background=dark

set guioptions-=T
set guioptions+=c

set list
set listchars=tab:▸\ ,eol:¬
"Invisible character colors
highlight NonText guifg=#dddddd
highlight SpecialKey guifg=#dddddd


" I can have these back once I don't want them anymore
noremap  <Up> ""
noremap! <Up> <Esc>
noremap  <Down> ""
noremap! <Down> <Esc>
noremap  <Left> ""
noremap! <Left> <Esc>
noremap  <Right> ""
noremap! <Right> <Esc>

